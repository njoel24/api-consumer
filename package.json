{
	"name": "api-consumer",
	"version": "1.0.0",
	"description": "simple reactjs application that reads data from public api and display it",
	"main": "src/index.tsx",
	"scripts": {
		"start-client": "webpack-dev-server --client-ssr --progress ",
		"start-server": "nodemon ./dist/server.js",
		"build-server": "webpack --server-ssr",
		"build-client": "webpack --client-ssr",
		"build-all-and-start-server": "npm run build-server && npm run build-client && npm run start-server",
		"test": "jest",
		"test::watch": "jest --watch",
		"test::update-snapshots": "jest --u",
		"lint": "tslint --format stylish --project tsconfig.json"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test && npm run lint"
		}
	},
	"keywords": [
		"public",
		"api",
		"reactjs"
	],
	"author": "Cristiano Salvatore Anselmi",
	"license": "ISC",
	"dependencies": {
		"axios": "^0.21.1",
		"enzyme": "^3.11.0",
		"express": "^4.17.1",
		"isomorphic-style-loader": "^5.1.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-test-renderer": "^16.13.1"
	},
	"devDependencies": {
		"@types/enzyme": "^3.10.5",
		"@types/express": "^4.17.7",
		"@types/jest": "^25.2.3",
		"@types/react": "^16.9.35",
		"@types/react-dom": "^16.9.8",
		"@types/react-test-renderer": "^16.9.2",
		"css-loader": "^3.5.3",
		"enzyme-adapter-react-16": "^1.15.2",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.3.0",
		"husky": "^4.2.5",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.0.1",
		"jest-cli": "^26.0.1",
		"jest-css-modules": "^2.1.0",
		"nodemon": "^2.0.4",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"postcss-preset-env": "^6.7.0",
		"source-map-loader": "^1.0.0",
		"style-loader": "^1.2.1",
		"terser-webpack-plugin": "^3.0.3",
		"ts-loader": "^7.0.5",
		"tslint": "^6.1.2",
		"typescript": "^3.9.3",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.11.0",
		"webpack-node-externals": "^2.5.1"
	}
}
